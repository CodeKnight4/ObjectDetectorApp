<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:ObjectDetector.ViewModel"
             x:Class="ObjectDetector.MainPage">


    <ScrollView>
        <VerticalStackLayout
            Padding="15,15"
            Spacing="25"
            Background="PaleTurquoise">
            <Grid x:Name="CameraWindow"
                  ColumnDefinitions="*" 
                  RowDefinitions="*"
                  HorizontalOptions="Center"
                  IsVisible="{Binding IsCameraVisible}">
                <toolkit:CameraView
                    x:Name="MyCamera"
                    MediaCaptured="MyCamera_MediaCaptured"
                    Grid.ColumnSpan="3"
                    SelectedCamera="{Binding SelectedCamera}"
                    ZoomFactor="{Binding CurrentZoom}"/>
                <GraphicsView 
                    x:Name="graphicsView"
                    Drawable="{Binding Drawable}"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand" />
            </Grid>

            <VerticalStackLayout
                IsVisible="{Binding IsCameraNotVisible}">
                
                <Label
                    Text="Hello, welcome to Whatisit?"
                    TextColor="Black"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1" />
                <Label
                    Padding="25"
                    Text="This is a simple object detection application, &#x0a; just press the camera button below and start detecting things!"
                    TextColor="Black"
                    Style="{StaticResource SubHeadline}"
                    SemanticProperties.HeadingLevel="Level2"
                    SemanticProperties.Description="Main message" />
            </VerticalStackLayout>
            
            <HorizontalStackLayout
                HorizontalOptions="Center"
                Spacing="25"
                Padding="10">
                <Button
                    x:Name="CameraBtn"
                    ImageSource="{Binding CameraImageSource}"
                    MaximumWidthRequest="80"
                    MaximumHeightRequest="60"
                    SemanticProperties.Hint="Opens/closes the camera app when clicked"
                    Command="{Binding CameraCommand}"
                    HorizontalOptions="CenterAndExpand"/>

                <Button
                    x:Name="DetectBtn"
                    Text="Detect 🔍"
                    Command="{Binding CaptureImageCommand}"
                    MaximumWidthRequest="100"
                    MaximumHeightRequest="60"
                    SemanticProperties.Hint="Opens/closes the camera app when clicked"
                    HorizontalOptions="Center"
                    IsVisible="{Binding IsDetectButtonVisible}"/>

                <StackLayout
                    IsVisible="{Binding IsCameraVisible}">
                    <Picker x:Name="picker"
                        Title="Select which camera to use"
                        TextColor="Black"
                        TitleColor="Black"
                        BackgroundColor="Black"
                        ItemsSource="{Binding AvailableCameras}"
                        SelectedItem="{Binding SelectedCamera}">
                    </Picker>
                </StackLayout>
                <StackLayout
                    IsVisible="{Binding IsCameraVisible}">
                    <Label x:Name="topLabel"
                        Text="Zoom"
                        FontSize="18"
                        TextColor="Black"
                        HorizontalOptions="Center"
                        VerticalOptions="Center" />
                    <Slider 
                        Maximum="{Binding SelectedCamera.MaximumZoomFactor, FallbackValue=1}"
                        Minimum="{Binding SelectedCamera.MinimumZoomFactor, FallbackValue=1}"
                        Value="{Binding CurrentZoom}" />
                </StackLayout>
            </HorizontalStackLayout>
            <Image
                x:Name="MyImage"
                Source="{Binding CapturedImageStream}"
                HeightRequest="185"
                Aspect="AspectFit"/>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

