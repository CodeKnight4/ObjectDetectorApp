<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:ObjectDetector.ViewModel"
             x:Class="ObjectDetector.MainPage">

    <ContentPage.BindingContext>
        <local:MainPageViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            Background="PaleTurquoise">
            <Grid x:Name="CameraWindow"
                  ColumnDefinitions="416,*,*" 
                  RowDefinitions="*,416"
                  HorizontalOptions="Center"
                  IsVisible="{Binding IsCameraVisible}">
                <toolkit:CameraView
                x:Name="MyCamera"
                MediaCaptured="MyCamera_MediaCaptured"
                Grid.ColumnSpan="3" 
                Grid.Row="1"/>
            </Grid>

            <Label
                Text="Hello, welcome to Whatisit?"
                TextColor="Black"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="This is an object detection application, just press the camera button below and start detecting things!"
                TextColor="Black"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I" />
            <HorizontalStackLayout
                HorizontalOptions="Center"
                Spacing="10"
                Padding="10">
                <Button
                    x:Name="CameraBtn"
                    ImageSource="{Binding CameraImageSource}"
                    MaximumWidthRequest="80"
                    MaximumHeightRequest="60"
                    SemanticProperties.Hint="Opens/closes the camera app when clicked"
                    Command="{Binding CameraCommand}"
                    HorizontalOptions="CenterAndExpand"/>

                <Button
                    x:Name="DetectBtn"
                    Text="Detect 🔍"
                    Command="{Binding DetectCommand}"
                    MaximumWidthRequest="100"
                    MaximumHeightRequest="60"
                    SemanticProperties.Hint="Opens/closes the camera app when clicked"
                    HorizontalOptions="Center"
                    IsVisible="{Binding IsDetectButtonVisible}"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

